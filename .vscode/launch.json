{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Test Current File",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "${relativeFile}",
        "--config=${workspaceFolder}/package.json",
        "--runInBand",
        "--forceExit"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "LOG_TARGET": "none",
        "APP_ENV": "test"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
